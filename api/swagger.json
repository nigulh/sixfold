          {
            "name": "message",
            "in": "path",
            "description": "Message to echo",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/pingResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "pingResponse": {
        "required": [
          "echo"
        ],
        "properties": {
          "echo": {
            "type": "string",
            "example": "hello"
          }
        },
        "type": "object"
      }
    }
  }
